<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Reduce Testcontainers verbosity -->
    <logger name="org.testcontainers" level="INFO"/>
    <logger name="com.github.dockerjava" level="WARN"/>
    <logger name="com.github.dockerjava.zerodep.shaded.org.apache.hc.client5.http.wire" level="OFF"/>
    <logger name="tc" level="INFO"/>

    <!-- Reduce Docker/Container startup noise -->
    <logger name="org.testcontainers.containers.output" level="WARN"/>
    <logger name="org.testcontainers.utility" level="WARN"/>

    <!-- Hibernate SQL logging (controlled by application-test.properties) -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>

    <!-- Spring Framework logging -->
    <logger name="org.springframework.test" level="INFO"/>
    <logger name="org.springframework.web" level="DEBUG"/>

    <!-- Application logging -->
    <logger name="com.tateca.tatecabackend" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
