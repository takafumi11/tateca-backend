<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter
    xmlns="https://github.com/spotbugs/filter/3.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://github.com/spotbugs/filter/3.0.0 https://raw.githubusercontent.com/spotbugs/spotbugs/3.1.0/spotbugs/etc/findbugsfilter.xsd">

    <!-- Exclude generated code -->
    <Match>
        <Class name="~.*\.TatecaBackendApplication"/>
    </Match>

    <!-- Exclude DTOs -->
    <Match>
        <Package name="~com\.tateca\.tatecabackend\.dto\..*"/>
    </Match>

    <!-- Exclude entities -->
    <Match>
        <Package name="~com\.tateca\.tatecabackend\.entity\..*"/>
    </Match>

    <!-- Exclude configuration classes -->
    <Match>
        <Package name="~com\.tateca\.tatecabackend\.config\..*"/>
    </Match>

    <!-- Exclude constants -->
    <Match>
        <Package name="~com\.tateca\.tatecabackend\.constants\..*"/>
    </Match>

    <!-- Exclude model classes -->
    <Match>
        <Package name="~com\.tateca\.tatecabackend\.model\..*"/>
    </Match>

    <!-- Exclude repositories (JPA interfaces) -->
    <Match>
        <Package name="~com\.tateca\.tatecabackend\.repository\..*"/>
    </Match>

    <!-- Exclude interceptors -->
    <Match>
        <Package name="~com\.tateca\.tatecabackend\.interceptor\..*"/>
    </Match>

    <!-- Exclude annotations -->
    <Match>
        <Package name="~com\.tateca\.tatecabackend\.annotation\..*"/>
    </Match>

    <!-- Exclude exceptions -->
    <Match>
        <Package name="~com\.tateca\.tatecabackend\.exception\..*"/>
    </Match>

    <!-- Exclude utilities -->
    <Match>
        <Package name="~com\.tateca\.tatecabackend\.util\..*"/>
    </Match>

    <!-- Exclude schedulers -->
    <Match>
        <Package name="~com\.tateca\.tatecabackend\.scheduler\..*"/>
    </Match>

    <!-- Exclude test classes -->
    <Match>
        <Source name="~.*Test\.java"/>
    </Match>

    <!-- Suppress common false positives in Spring Boot -->

    <!-- Spring autowired fields are acceptable -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2"/>
        <Class name="~.*Controller|.*Service|.*Repository"/>
    </Match>

    <!-- Lombok generated code -->
    <Match>
        <Bug pattern="EQ_DOESNT_OVERRIDE_EQUALS"/>
        <Class name="~.*\$.*"/>
    </Match>

</FindBugsFilter>
